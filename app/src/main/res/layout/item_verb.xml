<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">



    <TextView
        android:id="@+id/display_word_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/display_v1_edt"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Word" />


    <TextView
        android:id="@+id/display_v3_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/display_v1_edt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/display_v2_txt"
        app:layout_constraintTop_toBottomOf="@id/display_word_txt"
        tools:text="been" />


    <TextView
        android:id="@+id/display_v2_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/display_v1_edt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/display_word_txt"
        tools:text="was, were" />


    <TextView
        android:id="@+id/display_v1_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/display_v1_edt"
        app:layout_constraintEnd_toStartOf="@+id/display_v2_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/display_word_txt"
        tools:text="be" />


    <EditText
        android:id="@+id/display_v1_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="12dp"
        android:hint="Verb 1"
        android:inputType="text"
        android:lines="1"
        android:paddingHorizontal="12dp"
        app:layout_constraintBottom_toTopOf="@id/display_v2_edt" />


    <EditText
        android:id="@+id/display_v2_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:hint="Verb 2"
        android:inputType="text"
        android:lines="1"
        android:paddingHorizontal="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/display_v3_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:hint="Verb 3"
        android:inputType="text"
        android:lines="1"
        android:paddingHorizontal="12dp"
        app:layout_constraintTop_toBottomOf="@id/display_v2_edt" />

    <Button
        android:id="@+id/display_add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="add"
        app:layout_constraintEnd_toEndOf="@+id/display_v3_edt"
        app:layout_constraintTop_toBottomOf="@+id/display_v3_edt" />


</androidx.constraintlayout.widget.ConstraintLayout>